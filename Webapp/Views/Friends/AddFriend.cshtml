@using Entities;

@{
    ViewData["Title"] = "Add friend";
}

<h1>Add friend</h1>

<h4>Friend</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateFriends">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-danger">@ViewBag.Error</div>
            <input id="id" name="id" value="@ViewBag.Id" type="hidden" />
            <input id="action" name="action" value="add" type="hidden" />
            <div class="form-group mt-2">
                <label for="friendId" class="form-label">Escolha o amigo para adicionar</label>
                <select id="friendId" name="friendId" class="form-control" required>
                    <option value="" disabled selected>Email do amigo</option>
                    @foreach (Friend friend in ViewBag.Friends)
                    {
                        <option value="@friend.Id">@friend.Email</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add friend" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

